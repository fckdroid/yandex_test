<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <dimen name="design_bottom_navigation_active_text_size" tools:override="true">12sp</dimen>

    <!--<style name="TextPrimary" parent="TextAppearance.Material.Medium">-->
    <style name="TextPrimary" parent="@android:style/TextAppearance.Medium">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:foreground">@drawable/ripple_circle</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Image">
        <item name="android:layout_width">?attr/actionBarSize</item>
        <item name="android:padding">@dimen/icon_padding</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">@drawable/ripple_circle</item>
    </style>
</resources>
